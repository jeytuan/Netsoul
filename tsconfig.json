{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Set the base URL to the root of the project
    "paths": {
      "@/components/*": ["components/*"],
      "@/utils/*": ["src/utils/*"],
      "@/services/*": ["src/services/*"],
      "@/tests/*": ["src/tests/*"],
      "@/*": ["src/*"]
    },
    "types": [
      "node",
      "mocha",
      "chai",
      "sinon",
      "sinon-chai",
      "@sinonjs/fake-timers",
      "@nomiclabs/hardhat-ethers",
      "@nomiclabs/hardhat-waffle",
      "@typechain/hardhat"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
